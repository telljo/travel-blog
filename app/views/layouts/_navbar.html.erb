
<header class="navbar">
  <% if user_signed_in? %>
    <p><%= current_user.email %></p>
  <% else %>
  <div class="navbar__links">
    <%= link_to "Sign In",
                  new_user_session_path,
                  class: "btn btn--primary navbar__right" %>
    <%= link_to "Sign Up",
              new_user_registration_path,
              class: "btn btn--primary navbar__right" %>
  </div>
  <% end %>
</header>