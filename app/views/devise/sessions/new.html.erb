<div class="devise-form">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="devise-form__inputs">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.input :email,
          autofocus:
          true,
          autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.input :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    </div>

    <div class="devise-form__actions">
      <%= button_tag "Log in", class: "btn btn--green", type: :submit %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>