<div class="container">
  <%= render @trip %>
</div>

  <% if current_user == @trip.user %>
    <h2>New post</h2>

    <div class="container">
      <%= render "posts/form", post: @post.presence || Post.new, trip: @trip %>
    </div>
  <% end %>

  <h2>Trip posts</h2>

  <%= turbo_stream_from @trip %>
  <% @trip.posts.order(created_at: :desc).each do |post| %>
    <%= render post %>
  <% end %>