<%= form_with(id: "trip_form", model: trip) do |form| %>
  <div class="form trip">
    <div class="trip__header">
      <div class="form__field">
        <%= form.text_field :name,
          class: "form__input form__input--dark form__input--h2",
          placeholder: "Add a title",
          autofocus: true %>
      </div>
    </div>

    <div class="form__field trip__form-body">
      <%= form.rich_text_area :body,
        placeholder: "Add a trip description",
        class: "form__input form__input--dark form__input--body",
        size: "30x3", required: true %>
    </div>

    <div class="form__actions">
      <%= form.submit class: "btn btn--green" %>
      <% if @trip.persisted? %>
        <%= link_to "Cancel", trip_url(@trip),
            class: "btn btn--light" %>
      <% else %>
        <%= link_to "Cancel", trips_url,
          class: "btn btn--light" %>
      <% end %>
    </div>

    <% if trip.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

        <ul>
          <% trip.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
<% end %>
