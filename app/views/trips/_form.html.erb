<%= form_with(id: "trip_form", model: trip) do |form| %>
  <div class="form">
    <% if trip.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

        <ul>
          <% trip.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form__field">
      <% unless @trip.persisted? %>
        <%= form.label "Add a title" %><br />
      <% end %>
      <%= form.text_field :name,
        class: "form__input form__input--dark",
        input_html: { autofocus: true } %>
    </div>

    <div class="form__field">
      <% unless @trip.persisted? %>
        <%= form.label "Add a description" %><br />
      <% end %>
      <%= form.text_field :description,
        class: "form__input form__input--dark" %>
    </div>

    <div class="form__actions">
      <%= form.submit class: "btn btn--green" %>
      <% if @trip.persisted? %>
        <%= link_to "Cancel", trip_url(@trip),
            class: "btn btn--light" %>
      <% else %>
        <%= link_to "Cancel", trips_url,
          class: "btn btn--light" %>
      <% end %>
    </div>
  </div>
<% end %>
