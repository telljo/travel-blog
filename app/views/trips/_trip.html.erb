<div class="trip <%= additional_classes %>">
  <div class="trip__content" id="<%= dom_id trip %>">
    <div class="trip__header">
      <h2>
        <%= trip.name %>
      </h2>
    </div>
    <object class="trip__body-header" type="trip-link">
      <% if trip.created_at === trip.updated_at %>
        <p>
          <%=
            link_to trip.user.username,
            url_for(
              controller: '/users',
              action: 'show',
              username: trip.user.username
            ),
            class: "text__link",
            data: { turbo_frame: "_top" }
          %>
          created this trip on <%= trip.updated_at&.strftime("%B %d, %Y") %>
        </p>
      <% else %>
        <p>
          <%=
            link_to trip.user.username,
            url_for(
              controller: '/users',
              action: 'show',
              username: trip.user.username
            ),
            class: "text__link",
            data: { turbo_frame: "_top" }
          %>
          edited this trip on <%= trip.updated_at&.strftime("%B %d, %Y") %></p>
      <% end %>

      <% if current_user == trip.user %>
        <div class="dropdown icon" data-controller="dropdown"
          data-action="click->dropdown#toggle click@window->dropdown#hide"
          data-dropdown-target="checkbox"
          id="togglenav"
          type="checkbox">
          <i class="fas fa-ellipsis icon__edit">
          </i>

          <div data-dropdown-target="menu" class="dropdown__menu dropdown__menu--right dropdown__edit-menu" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1">
            <%= link_to "Edit trip",
                edit_trip_path(trip),
                data: { turbo_frame: dom_id(trip) },
                class: "dropdown__menu-item" %>
            <%= button_to "Delete trip",
                trip, method: :delete,
                data: { turbo: "false" },
                form: { data: { 'turbo-confirm': 'Are you sure?' } },
                class: "dropdown__menu-item" %>
          </div>
        </div>
      <% end %>
    </object>
    <div class="trip__body">
      <p><%= trip.description  %></p>
    </div>
  </div>
</div>